#!/bin/rc

fn usage {
	echo usage: opacity [-1] 0.0-1.0
	exit
}

one=0

if (test $#* -lt 1)
	usage

if (~ $1 -1) {
	one=1
	shift
}

if (! ~ $#* 1)
	usage

if (! { echo $1 | grep -s '^(0|0?(\.[0-9])[0-9]*|1(\.[0]+)?)$' })
	usage

if (~ $one 1)
	echo 'win('^`{cat /dev/winid}^').style.opacity='^$1^';' > /dev/js
if not {
	cd /dev/hsys
	{ for (i in [0-9]*) {
		echo 'win('^$i^').style.opacity='^$1^';'
	} } > /dev/js
}
